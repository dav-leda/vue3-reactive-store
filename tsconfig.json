{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "dist",
    "resolveJsonModule": true,
    "useDefineForClassFields": true,
    "types": ["vite/client"],
    "noImplicitThis": true,
    "strict": true,
    "isolatedModules": true,
    "target": "ESNext",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
  },
  "vueCompilerOptions": {
    "target": 3
  },
  "exclude": ["node_modules", "dist"]
}